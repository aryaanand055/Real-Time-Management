  <div id="loginPage">
    <div class="container" id="loginFormCont">
      <form id="loginForm" class="d-flex flex-column align-items-center justify-content-center">
        <div class="row input">
          <label for="Reg_No" class="fw-bold fs-5">Registration Number:</label>
          <input type="text" placeholder="715524104021" required class="input-box p-2 my-2 form-control " name="Reg_No" id="Reg_No">
        </div>
        <div class="row input">
          <label for="password" class="fw-bold fs-5">Password:</label>
          <input type="password" placeholder="Enter the Password" required class="input-box p-2 my-2 input form-control" name="password" id="password">
        </div>
        <div class="row  mt-4">
          <button type="submit" class="submit btn btn-primary p-0 m-0">Login</button>
        </div>
        <div class="small">Login will expire in 1 hour</div>
      </form>
    </div>
  </div>
</div>

<script>
  document.getElementById('loginForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const regNo = document.getElementById('Reg_No').value;
    const password = document.getElementById('password').value;
    const urlParams = new URLSearchParams(window.location.search);
    const redirectUrl = urlParams.get('redirect');
    const response = await fetch('/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        Reg_No: regNo,
        password: password
      })
    });
    const data = await response.json();
    if (!response.ok) {
      throw new Error('Login failed');
    }

    if (data.success === true) {
      if (redirectUrl) {
        window.location.href = redirectUrl;
        return;
      }
      const accessRole = data.access_role;
      if (accessRole === 1) {
        window.location.href = '/lateAbsenceForm';
      } else if (accessRole === 2 || accessRole === 3) {
        window.location.href = '/dashboard';
      }
    } else {
      alert(data.message);
    }
  });
</script>