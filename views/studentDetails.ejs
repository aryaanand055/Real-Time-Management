<% function getOrdinal(num) { const suffixes=["st", "nd" , "rd" , "th" , "th" ]; return num + suffixes[(num % 10) - 1]
    || "th" ; } %>

    <div class="container mt-5">
        <h1 class="text-center">Welcome to the Late Attendance Management Dashboard</h1>

        <!-- Personal Info Card -->
        <div class="card mt-4 p-4">
            <div class="card-title">
                <h3>Department Overview</h3>
            </div>
            <div class="card-body">
                <h4>Late Attendance Summary</h4>
                <div class="row">
                    <% prevData.forEach(data=> {
                        const [title, count] = Object.entries(data)[0]; %>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= count %> late attendances
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>

        <!-- Student Details Card -->
        <div class="card mt-4">
            <div class="card-body">
                <h4>Student Lookup</h4>
                <p><strong>Registration Number:</strong>
                    <%= student.Reg_no %>
                </p>
                <p><strong>Name:</strong>
                    <%= student.Student_name %>
                </p>
                <p><strong>Department:</strong>
                    <%= student.Department %>
                </p>
                <p><strong>Year of Study:</strong>
                    <%= getOrdinal(student.YearOfStudy) %> year
                </p>
                <p><strong>Section:</strong>
                    <%= student.Section %>
                </p>
            </div>
        </div>

        <!-- Late Attendance Records -->
        <div class="card mt-4">
            <div class="card-body">
                <h4>All Late Attendance Records</h4>
                <% if (attendanceRecords.length> 0) { %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Recorded Time</th>
                                <th>Reason for Lateness</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% attendanceRecords.forEach(record=> { %>
                                <tr>
                                    <td>
                                        <%= new Date(record.Late_Date).toDateString() %>
                                    </td>
                                    <td>
                                        <%= new Date(record.Late_Date).toLocaleTimeString() %>
                                    </td>
                                    <td>
                                        <%= record.Reason %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p>No late attendance records available for this student.</p>
                        <% } %>
            </div>
        </div>
    </div>